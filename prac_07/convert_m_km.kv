BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            text: "34"
            size_hint_x: 0.8
            on_text: app.convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'up'
                on_press: app.increment()
            Button:
                text: 'down'
                on_press: app.decrement()
##    Button:
##        text: "Convert m to km"
##        on_press: app.convert()
    Label:
        font_size: 48
        text: app.message
